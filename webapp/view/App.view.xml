<mvc:View controllerName="CEMOSA.ZYBC_probando.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<Button text="{i18n>showHelloButtonText}" press=".onShowHello"/>
					<Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"/>
					<Text class="hC" text="CEMOSA forever!"/>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>